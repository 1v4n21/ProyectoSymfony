{% extends 'base.html.twig' %}

{% block title %}Ver Incidencia{% endblock %}

{% block body %}
<style>
    .card {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        background-color: #ffffff;
        border: 1px solid rgba(0, 0, 0, 0.125);
        border-radius: 0.25rem;
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
        padding: 20px;
        color: #495057;
    }

    h1, h3, p {
        margin-bottom: 10px;
    }

    a {
        color: #007bff;
    }

    a:hover {
        text-decoration: underline;
    }
</style>

<br>

<div class="card">
    <h1 class="display-4">{{ incidencia.titulo }}</h1>
    <h3 class="lead">Cliente: {{ incidencia.cliente.nombre }}</h3>
    <p class="lead">Estado: {{ incidencia.estado }}</p>
    <p class="lead">Fecha de Creaci√≥n: {{ incidencia.fechaCreacion|date('Y-m-d H:i:s') }}</p>
    <p class="lead">Usuario encargado: {{incidencia.usuario.nombre}}</p>
    <a class="btn btn-link" href="{{ path('verIncidenciasPorCliente',{id: incidencia.cliente.id}) }}">Volver</a>
</div>
{% endblock %}


