{% extends 'base.html.twig' %}

{% block title %}Ver incidencias{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Lista de Incidencias</h1>
        <br><br>
        <div class="list-group">
            {% for incidencia in incidencias %}
                <a href="{{ path('verIncidencia', { id: incidencia.id }) }}" class="list-group-item list-group-item-action">
                    {{ incidencia.titulo }} ({{ incidencia.cliente.nombre }})
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
