{% extends 'base.html.twig' %}

{% block title %}Hello CategoriaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello World! ✅</h1>

    {% for incidencia in cliente.incidencias %}
        <div> <a href="{{path('verIncidencia',{id: incidencia.id}) }}">{{ incidencia.titulo }}</div>
    {% endfor %}
    <br>
    <a href="{{path("clientes")}}">Volver</a><br>
    <a href="{{path("addIncidencia",{id:cliente.id})}}">Añadir incidencia al cliente</a>
</div>
{% endblock %}
