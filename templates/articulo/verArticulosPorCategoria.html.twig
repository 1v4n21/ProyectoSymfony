{% extends 'base.html.twig' %}

{% block title %}Hello CategoriaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello World! ✅</h1>

    {% for articulo in categoria.articulos %}
        <div> <a href="{{path('verArticulo',{id: articulo.id}) }}">{{ articulo.nombre }}</div>
    {% endfor %}
    <br>
    <a href="{{path("categorias")}}">Volver</a><br>
    <a href="{{path("addArticulo",{id:categoria.id})}}">Añadir artículo a la categoría</a>
</div>
{% endblock %}
